{
    "name": "EducationDepartmentWebsite",
    "version": "1.0.0",
    "author": "Oleksandr Zagorenko",
    "description": "This is the main repository and it includes several submodules.",
    "license": "ISC",
    "scripts": {
        "start": "concurrently -c \"bgBlue.bold,bgGreen.bold\" \"npm:server:start\" \"npm:client\"",
        "dev": "concurrently -c \"bgBlue.bold,bgGreen.bold\" \"npm:server:dev\" \"npm:client\"",
        "client": "npm start --prefix ./frontend",
        "server:start": "npm start --prefix ./backend",
        "server:dev": "npm run dev --prefix ./backend"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}
